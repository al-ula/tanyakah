<div class="mx-auto w-full max-w-md mb-4">
    <article class="prose text-center"><h3>Bagikan pada teman-temanmu!</h3></article>
</div>
<div class="flex shadow-sm gap-4 w-full max-w-md mx-auto mb-12">
    <input
            value="{{board_url}}"
            id="url-own"
            readonly=""
            class="indent-2 input input-bordered input-md w-full"
            type="url"
    />

    <button
            class="btn btn-primary btn-square justify-center items-center"
            onclick="navigator.clipboard.writeText(document.getElementById('url-own').value);"
    >
        <svg
                class="w-7 h-7 fill-primary-content"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
            <g id="SVGRepo_iconCarrier">
                <path d="M16 12.9V17.1C16 20.6 14.6 22 11.1 22H6.9C3.4 22 2 20.6 2 17.1V12.9C2 9.4 3.4 8 6.9 8H11.1C14.6 8 16 9.4 16 12.9Z"></path>
                <path d="M17.0998 2H12.8998C9.81668 2 8.37074 3.09409 8.06951 5.73901C8.00649 6.29235 8.46476 6.75 9.02167 6.75H11.0998C15.2998 6.75 17.2498 8.7 17.2498 12.9V14.9781C17.2498 15.535 17.7074 15.9933 18.2608 15.9303C20.9057 15.629 21.9998 14.1831 21.9998 11.1V6.9C21.9998 3.4 20.5998 2 17.0998 2Z"></path>
            </g>
        </svg>
    </button>
</div>
