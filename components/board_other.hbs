<div class="mx-auto w-96 mt-4 mb-4">
    <article class="prose text-center"><h3>Papan pesan {{user_name}}</h3></article>
</div>

<div id="{{message_id}}" class="message flex flex-col gap-2 w-96 mx-auto mt-4">
    <div class="card bg-neutral text-neutral-content w-96">
        <div class="card-body items-start text-center">
            <div class="mx-auto w-full">
                <article class="prose text-center"><h4>{{user_name}} tidak akan tahu siapa yang memberi pesan.</h4></article>
            </div>
            <div class="w-full flex flex-row gap-1 mt-4">
                <input
                        type="text"
                        placeholder="Kirimkan pesan"
                        class="input input-md w-full max-w-xs"/>
                <button class="btn btn-neutral btn-md">
                    <svg
                            class="w-5 h-5 stroke-accent"
                            stroke="currentColor"
                            stroke-width="1.5"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                                d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5"
                                stroke-linejoin="round"
                                stroke-linecap="round"
                        ></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

{{> message_list}}